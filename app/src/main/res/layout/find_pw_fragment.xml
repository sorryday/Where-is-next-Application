<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/id_text"
        />

    <EditText
        android:id="@+id/find_pw_input_id"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_input_large"
        android:hint="아이디"
        android:fontFamily="@font/notosans_kr_regular"
        android:textSize="15sp"
        android:maxLength="20"
        />

        <!-- 휴대폰 번호 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/phone_text"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/find_pw_phone_input"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_up_input_short"
                android:hint="휴대전화 번호"
                android:fontFamily="@font/notosans_kr_regular"
                android:textSize="15sp"
                android:maxLength="50"
                android:inputType="phone"
                />
            <Button
                android:id="@+id/find_pw_auth_send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/auth_send_btn" />
        </LinearLayout>

        <!-- 인증번호 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/find_pw_valinum_input"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_up_input_short"
                android:hint="인증번호"
                android:fontFamily="@font/notosans_kr_regular"
                android:textSize="15sp"
                android:maxLength="6"
                android:inputType="phone"
                />

            <Button
                android:id="@+id/find_pw_auth_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/auth_confirm_btn" />

        </LinearLayout>

    <Button
        android:id="@+id/find_pw_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/confirm_btn" />

    </LinearLayout>
</ScrollView>